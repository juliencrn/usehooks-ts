{
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "moduleResolution": "node",
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true
  },

  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
