{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}
